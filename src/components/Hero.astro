---
import DarkModeToggle from './DarkModeToggle.astro';
---

<section id="hero">
  <div class="background"></div>
  <div class="content">
    <h1>Welcome to Bosson.io</h1>
    <p>Your go-to place for modern web development insights.</p>
    <a href="#about" class="button">Learn More</a>
  </div>
  <DarkModeToggle />
</section>

<style>
  #hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    overflow: hidden;
  }
  body.dark #hero {
    background: #222;
    color: #eee;
  }
.background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(120deg, #3245ff, #bc52ee);
    background-size: 200% 200%;
    animation: gradient 5s cubic-bezier(1, 1, 0.2, 0.4) infinite;
    z-index: -1;
}
@keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}
  .content {
    z-index: 1;
  }
  .button {
    margin-top: 1rem;
    padding: 0.8rem 1.5rem;
    background: white;
    color: #3245ff;
    text-decoration: none;
    border-radius: 8px;
    font-size: 1rem;
    transition: background 0.3s, color 0.3s;
  }
  .button:hover {
    background: #3245ff;
    color: white;
  }
</style>