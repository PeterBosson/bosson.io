<script>
  let isDarkMode = false;
  const toggleDarkMode = () => {
    isDarkMode = !isDarkMode;
    document.body.classList.toggle('dark', isDarkMode);
  };
</script>

<button id="dark-mode-toggle" onclick="toggleDarkMode()">
  Toggle Dark Mode
</button>

<style>
  #dark-mode-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    padding: 0.5rem 1rem;
    background: #3245ff;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s;
  }
  #dark-mode-toggle:hover {
    background: #bc52ee;
  }
  body.dark {
    background: #111;
    color: #eee;
  }
</style>