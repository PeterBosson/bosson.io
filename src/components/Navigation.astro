---
// src/components/Navigation.astro
const currentPath = Astro.url.pathname;
// 1. Normalize the path: Remove trailing slash if it exists
// 2. Handle root path: Ensure if path is just "/", it remains "/" after normalization
const normalizedPath = currentPath.endsWith('/') && currentPath.length > 1
    ? currentPath.slice(0, -1)
    : currentPath;
---

<nav class="card-navigation" transition:name="card-nav">
    <a href="/" class:list={{ active: normalizedPath === '/' }}>Hem</a>
    <a href="/contact" class:list={{ active: normalizedPath === '/contact' }}>Kontakta oss</a>
</nav>
